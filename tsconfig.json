{
	"compilerOptions": {
		"target": "ES2020", // Target ECMAScript version (ES2020 or later)
		"module": "ESNext", // Use ES modules for output
		"moduleResolution": "node", // Resolve modules as Node.js does
		"esModuleInterop": true, // Allows default imports from CommonJS modules
		"skipLibCheck": true, // Skip checking libraries for type errors
		"strict": true, // Enable all strict type-checking options
		"outDir": "./dist", // Output directory for compiled files
		"rootDir": "./src", // Root directory of your TypeScript source files
		"resolveJsonModule": true, // Allows importing JSON files as modules
		"allowJs": true, // Allows JavaScript files in the project
		"sourceMap": true, // Generates source maps for easier debugging
		"declaration": true // Generates `.d.ts` declaration files (optional)
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
